<section class="blog-area">
    <div class="container-fluid">

        <div class="row">

            <div class="col-12">
                <div class="cv-download">
                    <div class="row align-items-center">

                        <div class="col-lg-6 col-md-12">
                            <p class="topnote">Fill all required fields and click create cv to download CV in both PDF
                                and PNG formats</p>

                        </div>
                        <div class="col-lg-6 col-md-12 mt-s">
                            <a href="#" class="btn btn-primary">Download as PDF</a>
                            <a href="#" class="btn btn-soft-primary ms-2">Download as PNG</a>
                        </div>
                    </div>
                </div>
                <div class="container">

                    <form method="POST" action="/resume/new">
                        <div class="mt-150x">
                            <h1>Personal Info</h1>
                            <div class="block-container">
                               
                                <div class="mt-30">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label>First Name:</label>
                                            <input type="text" name="firstname" id="firstname" value={{user.firstname}}
                                                readonly="readonly" class="form-control">
                                        </div>

                                        <div class="col-lg-6">
                                            <label>Last Name:</label>
                                            <input type="text" name="lastname" id="lastname" value={{user.lastname}}
                                                readonly="readonly" class="form-control">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Address:</label>
                                            <input type="text" name="address" id="address" class="form-control">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Email:</label>
                                            <input type="text" name="email" id="email" value={{user.email}} readonly="readonly"
                                                class="form-control">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Linked In:</label>
                                            {{#if user.linkedin}}
                                            <input type="text" name="linkedin" id="linkedin" value={{user.linkedin}}
                                                readonly="readonly" class="form-control">
                                            {{else}}
                                                <input type="text" name="linkedin" id="linkedin" class="form-control">
                                            {{/if}}
                                        </div>

                                        <div class="col-lg-6">
                                            <label>Phone No:</label>
                                            <input type="text" name="phonenumber" id="phonenumber" value={{user.phonenumber}}
                                                readonly="readonly" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-150x">
                            <h2>About Me</h2>
                            <div class="block-container">
                                <div class="mt-30">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label>Title:</label>
                                            <input type="text" name="title" id="title" class="form-control">
                                        </div>

                                        <div class="col-lg-12">
                                            <label>Profile:</label>
                                            <textarea type="text" name="profile" id="profile" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group add-edu">
                            <h2>Add Educations</h2>
                            <div class="all-edus">
                                <h3>Education 1</h3>
                                <div class="new-edu">
                                    <label>Field of study:</label>
                                    <input type="text" name="education_field" id="education_field" class="form-control">
                                    <label>Qualification:</label>
                                    <input type="text" name="education_qualification" id="education_qualification" class="form-control">
                                    <label>School:</label>
                                    <input type="text" name="education_school" id="education_school" class="form-control">
                                    <div class="form-row">
                                        <div class="col">
                                            <label>From year:</label>
                                            <input type="month" name="education_fromYear" id="education_fromYear"  class="form-control">
                                        </div>
                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="month" name="education_toYear" id="education_toYear" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <hr>

                                <h4>Education 2</h4>
                                <div class="new-edu">
                                    <label>Field of study:</label>
                                    <input type="text" name="education2_field" id="education2_field" class="form-control">
                                    <label>Qualification:</label>
                                    <input type="text" name="education2_qualification" id="education2_qualification"  class="form-control">
                                    <label>School:</label>
                                    <input type="text" name="education2_school" id="education2_school" class="form-control">
                                    <div class="form-row">
                                        <div class="col">
                                            <label>From year:</label>
                                            <input type="month" name="education2_fromYear" id="education2_fromYear" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="month" name="education2_toYear" id="education2_toYear" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <hr>

                                <h4>Education 3</h4>
                                <div class="new-edu">
                                    <label>Field of study:</label>
                                    <input type="text" name="education3_field" id="education3_field" class="form-control">
                                    <label>Qualification:</label>
                                    <input type="text" name="education3_qualification" id="education3_qualification" class="form-control">
                                    <label>School:</label>
                                    <input type="text" name="education3_school" id="education3_school" class="form-control">
                                    <div class="form-row">
                                        <div class="col">
                                            <label>From year:</label>
                                            <input type="month" name="education3_fromYear" id="education3_fromYear" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="month" name="education3_toYear" id="education3_toYear" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group add-exp mt-s">
                            <h2>Add Experiences</h2>
                            <div class="all-exps">
                                <h3>Experience 1</h3>
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="experience_title" id="experience_title" class="form-control">
                                    <label>Company:</label>
                                    <input type="text" name="experience_company" id="experience_company" class="form-control">
                                    <div class="form-row">
                                        <div class="col">
                                            <label>From year:</label>
                                            <input type="number" name="experience_fromYear" id="experience_fromYear" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="text" name="experience_toYear" id="experience_toYear" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <h4>Experience 2</h4>
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="experience2_title" id="experience2_title" class="form-control">
                                    <label>Company:</label>
                                    <input type="text" name="experience2_company" id="experience2_company" class="form-control">
                                    <div class="form-row">
                                        <div class="col">
                                            <label>From year:</label>
                                            <input type="number" name="experience2_fromYear" id="experience2_fromYear" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="text" name="experience_toYear" id="experience_toYear" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <h4>Experience 3</h4>
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="experience3_title" id="experience3_title" class="form-control">
                                    <label>Company:</label>
                                    <input type="text" name="experience3_company" id="experience3_company" class="form-control">
                                    <div class="form-row">
                                        <div class="col">
                                            <label>From year:</label>
                                            <input type="number" name="experience3_fromYear" id="experience3_fromYear" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="text" name="experience_3toYear" id="experience3_toYear" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group add-skill mt-s">
                            <h2>Add Skills</h2>
                            <div class="block-container">
                                <div class="all-skills">
                                    <h3>Skill 1</h3>
                                    <div class="new-skills">
                                        <label>Skill</label>
                                        <input type="text" name="skill_name" id="skill_name" class="form-control">
                                        <label>Proficiency</label>
                                        <input type="text" name="skill_proficiency" id="skill_proficiency" class="form-control">
                                    </div>
                                    <hr>
                                    <h4>Skill 2</h4>
                                    <div class="new-skills">
                                        <label>Skill</label>
                                        <input type="text" name="skill2_name" id="skill2_name" class="form-control">
                                        <label>Proficiency</label>
                                        <input type="text" name="skill2_proficiency" id="skill2_proficiency" class="form-control">
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                        <hr class="mt-100">
                        <input type="submit" name="submit" value="Build Resume" class="btn-sub">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>