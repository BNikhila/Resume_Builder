<section class="blog-area">
        <div class="container-fluid">

            <div class="row">              

                <div class="col-12">
                    <div class="cv-download">
                        <div class="row align-items-center">
                            
                            <div class="col-lg-6 col-md-12">
                                <p class="topnote">Fill all required fields and click create cv to download CV in both PDF and PNG formats</p>
                                
                            </div>
                            <div class="col-lg-6 col-md-12 mt-s">
                                <a href="#" class="btn btn-primary">Download as PDF</a>
                                <a href="#" class="btn btn-soft-primary ms-2">Download as PNG</a>
                            </div>
                        </div>
                    </div>
                    <div class="container">

                        <form method="POST" action="/resume/new">
                            <div class="mt-150x">
                                <h2>Personal Info</h2>
                                <div class="block-container">
                                    <div class="row align-items-center">
                                        <div class="col-lg-2 col-md-4">
                                            <img src="/public/img/test-img/1.jpg" class="d-block" alt="">
                                        </div>
                                        <div class="col-lg-5 col-md-8 mt-s">
                                            <h6 class="">Upload your picture</h6>
                                            <p class="text-muted mb-0">For best results, use image 300px by 300px in either .jpg or .png</p>
                                        </div>
                                        <div class="col-lg-5 col-md-12 mt-s">
                                            <a href="#" class="btn btn-primary">Upload</a>
                                            <a href="#" class="btn btn-soft-primary ms-2">Remove</a>
                                        </div>
                                    </div>
                                    <div class="mt-30">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <label>First Name:</label>
                                                <input type="text" name="firstName" class="form-control">
                                            </div>
                                            
                                            <div class="col-lg-6">
                                                <label>Last Name:</label>
                                                <input type="text" name="lastName" class="form-control">
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Address:</label>
                                                <input type="text" name="address" class="form-control">
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Email:</label>
                                                <input type="text" name="email" class="form-control">
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Linked In:</label>
                                                <input type="text" name="linkedIn" class="form-control">
                                            </div>
                                            
                                            <div class="col-lg-6">
                                                <label>Phone No:</label>
                                                <input type="text" name="phoneNo" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group add-edu">
                                <h2>Add Educations</h2>
                                <div class="all-edus">
                                    <div class="new-edu">
                                        <label>Field of study:</label>
                                        <input type="text" name="education_field" class="form-control" >
                                        <label>Qualification:</label>
                                        <input type="text" name="education_qualification" class="form-control" >
                                        <label>School:</label>
                                        <input type="text" name="education_school" class="form-control">
                                        <div class="form-row">
                                            <div class="col">
                                                <label>From year:</label>
                                                <input type="month" name="education_fromYear" class="form-control">
                                            </div>
                                            <div class="col">
                                                <label>To year (optional=present):</label>
                                                <input type="month" name="education_toYear" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="add-blk btn btn-info" id="add-edu"> 
                                    <i class="fa fa-plus"></i>
                                    <span>Add another education</span>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group add-exp mt-s">
                                <h2>Add Experiences</h2>
                                <div class="all-exps">
                                    <div class="new-exp">
                                        <label>Title:</label>
                                        <input type="text" name="experience_title" class="form-control">
                                        <label>Company:</label>
                                        <input type="text" name="experience_company" class="form-control">
                                        <div class="form-row">
                                            <div class="col">
                                                <label>From year:</label>
                                                <input type="number" name="experience_fromYear" class="form-control">
                                            </div>
                                            <div class="col">
                                                <label>To year (optional=present):</label>
                                                <input type="text" name="experience_toYear" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="add-blk btn btn-info" id="add-exp">
                                    <i class="fa fa-plus"></i>
                                    <span>Add another experience</span>
                                </div>
                            </div>
                            
                            <div class="clearfix"></div>
                            
                            <div class="form-group add-skill mt-s">
                                <h2>Add Skills</h2>
                                <div class="block-container">
                                    <div class="all-skills">
                                        <div class="new-skills">
                                            <label>Skill</label>
                                            <input type="text" name="skill_name" class="form-control">
                                            <label>Proficiency</label>
                                            <input type="text" name="skill_proficiency" class="form-control">
                                        </div>
                                    </div>
                                

                                    <div class="add-blk add-skills btn btn-info mt-50">
                                        <i class="fa fa-plus"></i>
                                        <span>Add another Skill</span>
                                    </div>
                                </div>
                            </div>

                            <hr class="mt-100">
                            <input type="submit" name="submit" value="Build Resume" class="btn-sub">
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>